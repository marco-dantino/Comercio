<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Site.master.cs" Inherits="Comercio.SiteMaster" %>

<!DOCTYPE html>
<html lang="es">
<head runat="server">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <asp:ContentPlaceHolder ID="TitleContent" runat="server" />
    </title>

    <!-- Fonts e íconos -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet" />

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: '#DC2626',
                        "background-dark": "#121212",
                    },
                    fontFamily: { display: ["Inter", "sans-serif"] },
                    borderRadius: { DEFAULT: "0.5rem" },
                },
            },
        };
    </script>

    <style>
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://lh3.googleusercontent.com/aida-public/AB6AXuBPtcXPiQi2ffdb1LIm__rjLH6RN0fFwgioFmAOIJEtKpPGjtkTd3KJpKmYAu6koiWhHMiyLOUmHOtp9DGxO653o_hMaPN1HndXdoxAnIrQoriOiF7MoFkFG-V3ntZAs9gSOCwEzZO8gv8WRPEgrLxf78Mv1fBMmajYp8lqpgqS4_AAPhqZtF-Ezf_fmD6e2tOxDCTbXxYqJpvS66ABOy6P9sK2fKiwc2EIGs-SubgOv_d6gjnk9kWYfB-b6fEWTgnrzp2M5Ciihrh7') no-repeat center center;
            background-size: cover;
            opacity: 0.5;
            z-index: -1;
        }

        .material-icons {
            font-size: inherit;
        }

        .grid-dark {
            width: 100%;
            border-collapse: collapse;
            border-radius: 0.5rem;
            overflow: hidden;
            background-color: #1f2937;
            color: #f9fafb;
            font-family: 'Inter', sans-serif;
            font-size: 0.875rem;
            text-align: left;
        }

        .grid-dark thead {
            background-color: #374151;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
        }

        .grid-dark th {
            padding: 0.75rem 1.5rem;
            color: #d1d5db;
            font-weight: 600;
            border-bottom: 1px solid #4b5563;
        }

        .grid-dark td {
            padding: 0.75rem 1.5rem;
            border-bottom: 1px solid #374151;
        }

        .grid-dark tr:hover {
            background-color: #111827;
            transition: background-color 0.2s ease;
        }

        .grid-dark td.text-subtle {
            color: #9ca3af;
        }

        .grid-dark .actions {
            text-align: center;
        }

        .grid-dark button {
            color: #dc2626;
            transition: opacity 0.2s ease;
            background: none;
            border: none;
            cursor: pointer;
        }

        .grid-dark button:hover {
            opacity: 0.8;
        }
    </style>

</head>

<body class="bg-background-dark font-display text-gray-200 antialiased">
    <div class="flex flex-col min-h-screen">
        <form id="form1" runat="server" class="flex flex-col min-h-screen">

            <header class="bg-gray-800 shadow-md">
                <nav class="container mx-auto px-6 py-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <a class="text-white text-xl font-bold" href="Default.aspx">Gestión multriproposito</a>
                            <div class="hidden md:flex ml-10 space-x-8">
                                <a href="Productos.aspx" class="text-gray-300 hover:text-white transition-colors">Productos</a>
                                <a href="Categorias.aspx" class="text-gray-300 hover:text-white transition-colors">Categorías</a>
                                <a href="Marcas.aspx" class="text-gray-300 hover:text-white transition-colors">Marcas</a>
                                <a href="Usuarios.aspx" class="text-gray-300 hover:text-white transition-colors">Usuarios</a>
                                <a href="Clientes.aspx" class="text-gray-300 hover:text-white transition-colors">Clientes</a>
                                <a href="Proveedores.aspx" class="text-gray-300 hover:text-white transition-colors">Proveedores</a>
                            </div>
                        </div>
                        <div>
                            <a href="Login.aspx" class="text-gray-300 hover:text-white transition-colors">Cerrar Sesión</a>
                        </div>
                    </div>
                </nav>
            </header>

            <asp:ContentPlaceHolder ID="MainContent" runat="server" />

            <footer class="py-4">
                <div class="container mx-auto px-6 text-center text-gray-400">
                    <p>&copy; <%: DateTime.Now.Year %> - Mi aplicación ASP.NET</p>
                </div>
            </footer>
        </form>
    </div>
</body>
</html>

